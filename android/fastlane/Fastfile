default_platform(:android)

platform :android do
  desc "New Build to App Distribution Beta"
  lane :distribution do
    # sh("flutter build apk --release")
    firebase_app_distribution(
          app: "1:177761251370:android:652e9c80f7202247999353",
          firebase_cli_path: "/usr/local/bin/firebase",
          apk_path: "../android/fastlane/app-release.apk",
          firebase_cli_token: "1//0esQ6rMbovSUUCgYIARAAGA4SNwF-L9Ir4JMTJUEH7TxuZ78A6ohqP6RWHmbhlKR4sYTfi66b6JjMnBh3Wqyg5TpxICJd16p4xYA"
          )

          latest_version = sh('firebase appdistribution:releases:list --app=1:177761251370:android:652e9c80f7202247999353 --token=Y1//0esQ6rMbovSUUCgYIARAAGA4SNwF-L9Ir4JMTJUEH7TxuZ78A6ohqP6RWHmbhlKR4sYTfi66b6JjMnBh3Wqyg5TpxICJd16p4xYA --format=json | jq -r ".[0].versionCode"')
    UI.message("Latest Firebase App Distribution version number: #{latest_version}")
  end

  
end
